{
	"name": "@lusc/truth-table",
	"version": "1.0.5",
	"main": "./dist/lib/index.js",
	"repository": "https://github.com/melusc/truth-table",
	"author": "lusc",
	"license": "MIT",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"ava": {
		"files": [
			"test/*.test.ts"
		],
		"typescript": {
			"compile": false,
			"rewritePaths": {
				"test/": "dist/test/test/"
			}
		}
	},
	"files": [
		"dist/lib"
	],
	"scripts": {
		"fmt": "prettier -w . && xo --fix",
		"build": "rimraf dist/lib && tsc",
		"build:test": "rimraf dist/test && tsc --project test.tsconfig.json",
		"test": "yarn run build:test && ava",
		"prepublish": "yarn build"
	},
	"devDependencies": {
		"@ava/typescript": "^3.0.1",
		"@lusc/tsconfig": "^1.1.0",
		"ava": "^4.2.0",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"typescript": "^4.6.4",
		"xo": "^0.48.0"
	}
}
