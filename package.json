{
	"name": "@lusc/truth-table",
	"version": "1.0.3",
	"exports": "./dist/lib/index.js",
	"repository": "https://github.com/melusc/truth-table",
	"author": "lusc",
	"license": "MIT",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"ava": {
		"files": [
			"test/*.test.ts"
		],
		"typescript": {
			"compile": false,
			"rewritePaths": {
				"test/": "dist/test/test/"
			}
		}
	},
	"files": [
		"dist/lib"
	],
	"scripts": {
		"fmt": "prettier -w . && xo --fix",
		"build": "del-cli \"dist/lib/*\" && tsc",
		"build-test": "del-cli \"dist/test/*\" && tsc --project test.tsconfig.json",
		"test": "yarn run build-test && ava",
		"prepublish": "yarn build"
	},
	"devDependencies": {
		"@ava/typescript": "^3.0.1",
		"@lusc/tsconfig": "^1.0.0",
		"@types/node": "^17.0.4",
		"ava": "^4.0.0-rc.1",
		"del-cli": "^4.0.1",
		"esm": "^3.2.25",
		"prettier": "^2.5.1",
		"typescript": "^4.5.4",
		"xo": "^0.47.0"
	}
}
