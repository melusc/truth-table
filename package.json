{
	"name": "@lusc/truth-table",
	"version": "1.1.0",
	"main": "./dist/src/index.js",
	"repository": "https://github.com/melusc/truth-table",
	"author": "lusc",
	"license": "MIT",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"ava": {
		"files": [
			"test/*.test.ts"
		],
		"typescript": {
